@inherits LayoutComponentBase

<div>

    <header>
        <nav class="bg-light-subtle text-light shadow navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <span class="navbar-brand">
                    <a class="navbar-brand" href="/">Sebastián Guzmán Morla</a>
                </span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="me-auto navbar-nav">
                        <a class="nav-link" href="/acerca">Acerca de mi</a>
                        <a class="nav-link" href="/contactame">Contáctame</a>
                    </div>
                    <div class="ms-auto navbar-nav">
                        <a href="https://github.com/sebastianguzmanmorla" class="nav-link">
